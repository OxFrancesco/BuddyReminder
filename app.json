{
  "expo": {
    "name": "BuddyReminder",
    "slug": "BuddyReminder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "buddyreminder",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "buddyreminder"
            ]
          }
        ],
        "NSSupportsLiveActivities": true,
        "NSSupportsLiveActivitiesFrequentUpdates": false,
        "Voltra_AppGroupIdentifier": "group.com.buddyreminder",
        "Voltra_WidgetIds": [
          "add_card"
        ]
      },
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.buddyreminder"
        ]
      },
      "bundleIdentifier": "com.avg-francesco.BuddyReminder"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#007AFF",
          "sounds": []
        }
      ],
      "expo-sqlite",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "17.0"
          }
        }
      ],
      [
        "voltra",
        {
          "groupIdentifier": "group.com.buddyreminder",
          "enablePushNotifications": true,
          "widgets": [
            {
              "id": "add_card",
              "displayName": "Add Card",
              "description": "Quick add a new reminder card",
              "supportedFamilies": [
                "systemSmall"
              ],
              "initialStatePath": "./widgets/add-card-initial.tsx"
            }
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
